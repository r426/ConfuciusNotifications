<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ryeslim.confuciusretrofitcoroutines.activities.MainActivity">

    <TextView
        android:id="@+id/theProverb"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="32"
        android:breakStrategy="simple"
        android:fontFamily="@font/calibril"
        android:gravity="center_vertical"
        android:singleLine="false"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        app:autoSizeMaxTextSize="48sp"
        app:autoSizeMinTextSize="8sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previousPage"
            style="@style/SmallIconStyle"
            android:src="@drawable/ic_chevron_left"
            android:contentDescription="@string/left"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />

        <ImageView
            android:id="@+id/nextPage"
            style="@style/SmallIconStyle"
            android:src="@drawable/ic_chevron_right"
            android:contentDescription="@string/right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <View style="@style/EmptyView" />

        <TextView
            style="@style/SmallWordStyle"
            android:text="@string/like" />

        <TextView
            style="@style/SmallWordStyle"
            android:text="@string/bookmarks" />

        <TextView
            style="@style/SmallWordStyle"
            android:text="@string/share" />

        <View style="@style/EmptyView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/firstPage"
            style="@style/SmallIconStyle"
            android:src="@drawable/ic_first_page"
            android:contentDescription="@string/first_page"/>

        <ImageView
            android:id="@+id/heart"
            style="@style/SmallIconStyle"
            android:src="@drawable/ic_favorite_border"
            android:contentDescription="@string/like"/>

        <ImageView
            android:id="@+id/showBookmarks"
            style="@style/SmallIconStyle"
            android:src="@drawable/ic_dehaze"
            android:contentDescription="@string/show_bookmarks"/>

        <ImageView
            android:id="@+id/share"
            style="@style/SmallIconStyle"
            android:src="@drawable/ic_share"
            android:contentDescription="@string/share"/>

        <ImageView
            android:id="@+id/lastPage"
            style="@style/SmallIconStyle"
            android:src="@drawable/ic_last_page"
            android:contentDescription="@string/last_page"/>
    </LinearLayout>
</LinearLayout>